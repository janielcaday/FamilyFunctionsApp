<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParentChoresListFragment" >

    <Button
        android:id="@+id/btnChoreList1"
        android:layout_width="190dp"
        android:layout_height="61dp"
        android:layout_marginTop="122dp"
        android:layout_marginEnd="111dp"
        android:text="chore 1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnChoreList2"
        android:layout_width="190dp"
        android:layout_height="61dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="111dp"
        android:text="chore 2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnChoreList1" />

    <Button
        android:id="@+id/btnChoreList3"
        android:layout_width="190dp"
        android:layout_height="61dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="111dp"
        android:text="chore 3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnChoreList2" />

    <Button
        android:id="@+id/btnChoreList4"
        android:layout_width="190dp"
        android:layout_height="61dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="111dp"
        android:text="chore 4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnChoreList3" />

    <Button
        android:id="@+id/newchorebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="163dp"
        android:text="+"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnChoreList4" />

    <TextView
        android:id="@+id/tvAddChore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="176dp"
        android:layout_marginBottom="143dp"
        android:text="Add New"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newchorebtn" />
</androidx.constraintlayout.widget.ConstraintLayout>